extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List
      a(href="/students/register")
        button.w3-button.w3-blue(style="width: 100%;") Add Student

      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
              th
              th
            each s in list
              tr
                td
                  a(href=`/students/${s.number}`)= s.number
                td= s.name
                td
                  a(href=s.git)= s.git
                td(style="width: 5%;")
                  form(method='GET', action=`/students/edit/${s.number}`)
                    input.w3-button.w3-yellow(type="submit" value="Edit")
                td(style="width: 5%;")
                  form(method="POST" action=`/students/${s.number}?_method=DELETE`)
                    input(type="hidden" name="_method" value="DELETE")
                    input.w3-button.w3-red(type="submit" value="Delete")
                  //form(method='DELETE', action=`/students/${s.number}`)
                  //  input.w3-button.w3-red(type="submit" value="Delete")

      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov